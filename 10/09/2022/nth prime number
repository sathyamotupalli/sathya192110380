#include<stdio.h>
int main()
{
    int a,b=0,i,c,d=1;
    printf("\n enter the number:");
    scanf("%d",&a);
    if (a>1){
    while(a!=b)
    {
        c=0;
        d++;
        for(i=2;i<=(d/2);i++)
        {
            if(d%i==0)
                c=1;
        }
        if(c==0)
        {
            b++;
        }
    }
    printf("%d prime number is: %d",a,d);}
    else if (a==1){
    printf("the prime number is %d",a);}
    else 
    {
    	printf("invaild input");
	}
}
