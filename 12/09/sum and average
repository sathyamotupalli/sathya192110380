#include<stdio.h>
int main()
{
	int a,b[10],i,j,mean=0,sum=0;
	printf("enter total nnumber of elements= ");
	scanf("%d",&a);
	for (i=1;i<=a;i++){
		printf("enter the values= ");
		scanf("%d",&b[i]);}
	for (i=1;i<=a;i++){
		sum+=b[i];
	}
	mean=sum/a;
	printf("average of the number is %d\n",mean);
	printf("the sum of numbers is = %d",sum);
}
